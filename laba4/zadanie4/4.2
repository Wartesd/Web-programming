<!DOCTYPE html>
<html>
<head>
    <title>Подтверждение регистрации</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 20px; }
        .info { background: #f5f5f5; padding: 15px; border-radius: 5px; }
    </style>
</head>
<body>
    <h1>Ваша регистрация подтверждена</h1>
    
    <div class="info">
        <h2>Ваши данные:</h2>
        <p id="userData"></p>
        
        <h2>Информация о мероприятии:</h2>
        <p id="eventData"></p>
    </div>

    <script>
        // Получаем данные из sessionStorage
        const lastName = sessionStorage.getItem('lastName');
        const firstName = sessionStorage.getItem('firstName');
        const age = sessionStorage.getItem('age');
        const eventName = sessionStorage.getItem('eventName');
        const eventDate = sessionStorage.getItem('eventDate');
        const eventLocation = sessionStorage.getItem('eventLocation');
        
        // Форматируем дату
        const formattedDate = new Date(eventDate).toLocaleDateString('ru-RU');
        
        // Выводим данные
        document.getElementById('userData').innerHTML = `
            ${lastName} ${firstName}, ${age} лет
        `;
        
        document.getElementById('eventData').innerHTML = `
            <strong>Событие:</strong> ${eventName}<br>
            <strong>Дата:</strong> ${formattedDate}<br>
            <strong>Место:</strong> ${eventLocation}
        `;
    </script>
</body>
</html>
